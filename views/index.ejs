<% include partials/header %>


<div class = "ui main text container">
    <div class = "ui huge header">
        MY BLOG SITE
    </div>
    <div class="ui top attatched segment">
        <div class="ui devided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img class="ui rounded" src=" <%= blog.image %> " >
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>">  <%= blog.title %> </a>
                        <div class="meta">
                             <span>
                                <%= blog.created.toDateString() %>
                            </span>
                        </div>
                        <div class="description">
                            <p>
                                <%= blog.body.substring(0,100) %>....   
                            </p>
                        </div>
                        <div class="extra">
                        <a class="ui floated inverted small blue button" href="/blogs/<%= blog._id %>" >
                             More info <i class="right chevron icon"></i>
                        </a>
                    </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>