<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <h1> <%= blog.title %> </h1>
    </div>
    <div class="ui top attatched">
        <div class="item">
            <img class="ui rounded centered image" src=" <%= blog.image %> " >
        </div>
        <div class = "content">
            <span>
               <strong> <em> <%= blog.created.toDateString() %> </em> </strong>
            </span>
        </div>
        <div class="description">
            <p>
                <%= blog.body %>
            </p>
        </div>  
    </div>
    <div id="buttonsShow">
        <a href="/blogs/<%= blog._id %>/edit" class="ui blue inverted button">EDIT</a>
        <form id="delete" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
            <button class="ui red inverted button">DELETE</button>
        </form> 
        <div class="extra right">
            <a href="/blogs">Go back</a>
        </div> 
    </div>
</div>

<% include partials/footer %>